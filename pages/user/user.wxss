.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #eee;
  /*margin-top: 0;*/
}

.user-top {
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #fff;
  /*font-size: 14px;*//*margin-bottom: 20rpx;*//*padding: 10px 15px;*/
  box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.1), 0 6px 5px 0 rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin: 80rpx auto 10px auto;
}

.user-name {
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 36px;
}

.user-info {
  font-size: 30rpx;
  color: #000;
}

.weui-panel {
